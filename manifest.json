{
  "manifest_version": 3,
  "name": "Faphouse Extension",
  "description": "Reason, co-performer declines. Email and Producer Panel and Statuses on tab in SP. Tickets Buttons on Prod and User page. Published Video Alert. Monetization status and Internal Comments. Producer Comment in Photo moderation. Producer Comment and Short Video Validation in Multiple Moderation.",
  "version": "0.2.5",
  "action": {
    "default_icon": "images/faphouse_16.png",
    "default_popup": "html/index.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "16": "images/faphouse_16.png",
    "32": "images/faphouse_32.png",
    "48": "images/faphouse_48.png",
    "128": "images/faphouse_128.png"
  },
  "permissions": ["scripting", "sidePanel"],
  "side_panel": {
    "default_path": "html/swfpanel.html"
  },
  "host_permissions": [
    "https://panel.sexflix.com/*",
    "https://support.faphouse.com/*",
    "https://panel.stage.k8s.flixdev.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://panel.sexflix.com/*",
        "https://support.faphouse.com/*",
        "https://panel.stage.k8s.flixdev.com/*"
      ],
      "js": [
        "scripts/script.js",
        "scripts/sp.js",
        "scripts/queue.js",
        "scripts/spToTickets.js",
        "scripts/published.js",
        "scripts/monetization.js",
        "scripts/review.js",
        "scripts/photo.js",
        "scripts/multipleModeration.js"
      ],
      "css": ["css/styles.css"]
    }
  ]
}
